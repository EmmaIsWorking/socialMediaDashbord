.toggleContainer
  display: flex
.switch 
    position: relative
    display: inline-block
    width: 46px
    height: 23px


.switch input 
    opacity: 0
    width: 0
    height: 0


/* The slider */
.slider 
    position: absolute
    cursor: pointer
    top: 0
    left: 0
    right: 0
    bottom: 0
    background: linear-gradient(90deg, hsl(210, 78%, 56%), hsl(146, 68%, 55%))
    -webkit-transition: .4s
    transition: .4s


.slider:before 
    position: absolute
    content: ""
    height: 17px
    width: 17px
    left: 4px
    bottom: 2.6px
    background-color: hsl(0, 0%, 100%)
    -webkit-transition: .4s
    transition: .4s


input:checked + .slider 
    background: hsl(230, 22%, 74%)

input:checked + .slider:before 
    background: hsl(0, 0%, 100%)


input:checked + .slider:hover 
    background: linear-gradient(90deg, hsl(210, 78%, 56%), hsl(146, 68%, 55%))


input:focus + .slider 
    box-shadow: 0 0 1px linear-gradient(90deg, hsl(210, 78%, 56%), hsl(146, 68%, 55%))


input + .slider:before 
    background: hsl(230, 17%, 14%)


input:checked + .slider:before 
    -webkit-transform: translateX(21px)
    -ms-transform: translateX(21px)
    transform: translateX(21px)


/* Rounded sliders */
.slider.round 
    border-radius: 34px    


.slider.round:before 
    border-radius: 50%
